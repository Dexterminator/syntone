extends layout

block files
  script(src='javascripts/main.js')

block content
  .container
    .header-area
      h1.app-header syntone
      img.main-logo(src='images/logo.jpg')
      .info-area.clearfix
        h3 Band members
        ul#band-members
    .row
      .col-md-2#radios(data-toggle='tooltip', data-trigger='click|hover|focus', data-content='Use ' +
      'A, W, S, E, D, F, T, G, Y, H, U, J, K, O, L, and P to play notes on the keyboard. Q to switch instrument.')
        .radio
          label
            input#lead-choice(type='radio', name='keymap-choice', checked='true')
            span Map keyboard to lead
        .radio
          label
            input#bass-choice(type='radio', name='keymap-choice')
            span Map keyboard to bass
      .col-md-3.col-md-offset-3
        input.form-control#name-input(type='text', placeholder='Name', maxlength='18')
        a.btn.btn-primary#name-submit Submit name
    .row
      .col-md-8
        h5 Master volume
        #master-volume
    .row.unselectable
      .col-md-12
        include ./partials/lead
    .row.unselectable
      .col-md-12
        include ./partials/bass
    br
    br
    hr
    p.authors By Dexter Gramfors, Andreas Johansson, and Aiman Josefsson
